import FullContent from "@/sections/FullContent.astro";
import HomeMediaGrid from "@/sections/HomeMediaGrid.astro";
import AllEvents from "@/sections/AllEvents.astro";
import Instagram from "@/sections/Instagram.astro";

const Sections = {
  homeHero: HomeHero,
  mediaSection: Media,
  featuredList1: FeaturedList1,
  featuredList2: FeaturedList2,
  steps: Steps,
  centeredText: CenteredText,
  hero: Hero,
  featuredEvents: FeaturedEvents,
  centeredCard: CenteredCard,
  cta1: Cta1,

  videoTestimonials: VideoTestimonials,
  faqSection: FAQ,
  cta2: Cta2,
  scheduleSection: ScheduleSection,
  cardsFeature1: CardsFeature1,
  cardsFeature2: CardsFeature2,
  insights: Insights,
  successStories: SuccessStories,
  gallery: Gallery,
  contactInfo: ContactInfo,
  sponsors: Sponsors,
  featuresSection: Features,
  teamSection: TeamSection,
  sponsorTestimonials: SponsorTestimonials,
  consultatesSection: ConsultatesSection,
  steps2: Steps2,
  steps3: Steps3,
  winners: Winners,
  winners2: Winners2,
  contactForm: ContactForm,
  judges: Judges,
  industryTestimonials: IndustryTestimonials,
  auditionForm: AuditionFormSection,
  imageCards: ImageCards,
  nationalDirectors: NationalDirectors,
  ageDivisions: AgeDivisions,
  tableSection: TableSection,
  fullContent: FullContent,
  homeMediaGrid: HomeMediaGrid,
  allEvents: AllEvents,
  instagram: Instagram,
};

const { sections } = Astro.props;
---

{
  sections &&
    sections.map((section) => {
      const { _type } = section;
      const Component = Sections[_type];
      if (!Component) {
        console.error(`Component for type "${_type}" is not defined.`);
        return null;
      }
      return <Component section={section} />;
    })
}
